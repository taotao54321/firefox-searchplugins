<?xml version="1.0" encoding="UTF-8"?>
<OpenSearchDescription xmlns="http://a9.com/-/spec/opensearch/1.1/"
                       xmlns:moz="http://www.mozilla.org/2006/browser/search/">
  <ShortName>Bing</ShortName>
  <Description>Bing</Description>
  <InputEncoding>UTF-8</InputEncoding>
  <Image width="16" height="16">https://www.google.com/s2/favicons?domain=bing.com</Image>
  <Url method="GET" type="text/html"
       template="https://www.bing.com/search">
    <Param name="q" value="{searchTerms}"/>
  </Url>
  <Url method="GET" type="application/x-suggestions+json"
       template="https://api.bing.com/osjson.aspx">
    <Param name="q" value="{searchTerms}"/>
  </Url>
  <moz:SearchForm>https://www.bing.com/</moz:SearchForm>
</OpenSearchDescription>
