<?xml version="1.0" encoding="UTF-8"?>
<OpenSearchDescription xmlns="http://a9.com/-/spec/opensearch/1.1/"
                       xmlns:moz="http://www.mozilla.org/2006/browser/search/">
  <ShortName>Google JP</ShortName>
  <Description>Google JP</Description>
  <InputEncoding>UTF-8</InputEncoding>
  <Image width="16" height="16">https://www.google.com/s2/favicons?domain=www.google.com</Image>
  <Url method="GET" type="text/html"
       template="https://www.google.co.jp/search">
    <Param name="q"      value="{searchTerms}"/>
    <Param name="ie"     value="utf-8"/>
    <Param name="oe"     value="utf-8"/>
    <Param name="hl"     value="ja"/>
    <Param name="gl"     value="jp"/>
    <Param name="gws_rd" value="cr"/>
    <Param name="pws"    value="0"/>
  </Url>
  <Url method="GET" type="application/x-suggestions+json"
       template="https://www.google.co.jp/complete/search">
    <Param name="q"      value="{searchTerms}"/>
    <Param name="client" value="firefox"/>
  </Url>
  <moz:SearchForm>https://www.google.co.jp/?ie=utf-8&amp;oe=utf-8&amp;hl=ja&amp;gl=jp&amp;gws_rd=cr&amp;pws=0</moz:SearchForm>
</OpenSearchDescription>
