<?xml version="1.0" encoding="UTF-8"?>
<OpenSearchDescription xmlns="http://a9.com/-/spec/opensearch/1.1/"
                       xmlns:moz="http://www.mozilla.org/2006/browser/search/">
  <ShortName>DuckDuckGo</ShortName>
  <Description>DuckDuckGo</Description>
  <InputEncoding>UTF-8</InputEncoding>
  <Image width="16" height="16">https://www.google.com/s2/favicons?domain=duckduckgo.com</Image>
  <Url method="GET" type="text/html"
       template="https://duckduckgo.com/">
    <Param name="q" value="{searchTerms}"/>
  </Url>
  <Url method="GET" type="application/x-suggestions+json"
       template="https://ac.duckduckgo.com/ac/">
    <Param name="q"    value="{searchTerms}"/>
    <Param name="type" value="list"/>
  </Url>
  <moz:SearchForm>https://duckduckgo.com/</moz:SearchForm>
</OpenSearchDescription>
